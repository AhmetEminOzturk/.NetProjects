@using MvcOnlineCommercialAutomation.Models.Entities
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DepartmentID</td>
            <td>@item.DepartmentName</td>
            <td><a href="/Department/UpdateDepartment/@item.DepartmentID" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Department/DeleteDepartment/@item.DepartmentID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Department/DetailDepartment/@item.DepartmentID" class="btn btn-outline-warning">Detaylar</a></td>
            <th></th>
        </tr>
    }
</table>
<a href="/Department/AddDepartment/" class="btn btn-outline-success">Departman Ekle</a>