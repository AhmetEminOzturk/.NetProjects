@using MvcOnlineCommercialAutomation.Models.Entities
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/EditCategory/@item.CategoryID" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>            
        </tr>
    }
</table>
<a href="/Category/AddCategory/" class="btn btn-outline-success">Kategori Ekle</a>

