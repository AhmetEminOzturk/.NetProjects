@model Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>Ürün Adı</label>
    <input type="text" class="form-control" asp-for="ProductName" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <label>Ürün Görsel</label>
    <input type="text" class="form-control" asp-for="Image" />
    <br />
    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(x=> x.CategoryID, (List<SelectListItem>)ViewBag.v, new {@class = "form-control"})
    <br />
    <label>Ürün Açıklaması</label>
    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
    <br />
    <button class="btn btn-info">Ürünü Ekle</button>
</form>

