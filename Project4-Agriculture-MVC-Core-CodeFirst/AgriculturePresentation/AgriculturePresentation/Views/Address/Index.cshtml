@using EntityLayer.Concrete
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>
            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Açıklama 1</th>
                                <th>Açıklama 2</th>
                                <th>Açıklama 3</th>
                                <th>Açıklama 4</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td>@item.Description3</td>
                                    <td>@item.Description4</td>
                                    <td><a href="/Address/EditAddress/@item.AddressID" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>UYARI!</strong> Veri Tabanınızda Personel Bulunamamıştır.
                    </div>
                    <div class="alert alert-warning">
                        <strong>UYARI!</strong> Lütfen Personel Girişi Yapınız.
                    </div>
                }

            </div>
            <br />
            <a href="/Employee/AddEmployee" class="btn btn-outline-success">Yeni Adres Girişi</a>
        </div>
    </div>
</div>

