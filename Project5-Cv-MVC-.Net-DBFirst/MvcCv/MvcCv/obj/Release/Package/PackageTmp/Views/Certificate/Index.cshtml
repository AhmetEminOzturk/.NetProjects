@using MvcCv.Models.Entity
@model List<TblCertificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string color2 = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">                  
                        </div><!-- /.card-header -->
                        <div class="card-body">                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                            if (item.ID%2==0)
                                            {
                                                color = "btn btn-primary";
                                                color2 = "bg-primary";

                                            }
                                            else
                                            {
                                                color = "btn btn-success";
                                                color2 = "bg-success";
                                            }
                                            <div class="time-label">
                                                <a href="/Certificate/UpdateCertificate/@item.ID/" class="@color">
                                                    <span class="@color2">
                                                        @item.Date
                                                    </span>
                                                </a>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                    <div>
                                            <i class="fas fa-award bg-warning"></i>                                   
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Description
                                                </div>
                                                <div class="timeline-footer">
                                                </div>
                                            </div>
                                    </div>
                                        }
                                    </div>
                                    <a href="/Certificate/AddCertificate/" class="btn btn-outline-info">Yeni Sertifika Ekle</a>          
                                </div>
                            </div>

                        </div><!-- /.card-body -->
                    </div>
                </div>
            </div>
    </section>
</body>
</html>

