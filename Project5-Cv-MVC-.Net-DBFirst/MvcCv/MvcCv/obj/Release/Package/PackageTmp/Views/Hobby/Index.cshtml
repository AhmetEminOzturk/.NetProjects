@using MvcCv.Models.Entity
@model List<TblHobbies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Hobi Listesi</h2>
<form method="post">
    @foreach (var item in Model)
    {
        <label>Başlık</label>
        <textarea rows="1" class="form-control" name="Description1">@item.Description1</textarea>
        <br />

        <label>Açıklama</label>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
        <a href="/Hobby/UpdateHobby/@item.ID/" class="fas fa-edit"> Düzenle</a>
        <br />
        <br />
    }
</form>
