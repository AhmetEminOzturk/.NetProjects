@using MvcCv.Models.Entity
@model List<TblExperiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyimlerim Paneli</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            <td>@item.Date</td>
            <td><a href="/Experience/DeleteExperience/@item.ID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Experience/GetExperience/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
            <td>@item.Date</td>
        </tr>
    }
</table>
<a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
