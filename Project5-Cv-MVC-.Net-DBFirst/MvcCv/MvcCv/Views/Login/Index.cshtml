
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Templates/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Cv Login</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(https://thumbs.dreamstime.com/b/aeo-letter-logo-design-aeo-monogram-initials-letter-logo-concept-aeo-letter-design-black-background-aeo-letter-logo-design-aeo-243432328.jpg); "></div>
                        <h3 class="text-center mb-0">HOŞGELDİNİZ</h3>
                        <p class="text-center">Aşağıdaki bilgileri girerek oturum açınız</p>
                        <form method="post" class="login-form">
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" placeholder="Kullanıcı Adınız" name="UserName" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" placeholder="Şifreniz" name="Password" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100">
                                  <label class="checkbox-wrap checkbox-primary">
                                      Beni Hatırla
                                      <input type="checkbox" checked />
                                      <span class="checkmark"></span>
                                  </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="w-100 text-center mt-4 text">
                            <p class="mb-0">Henüz Bir Hesabın Yok Mu ?</p>
                            <a href="/Admin/AddAdmin/">Kayıt Ol</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Templates/login-form-19/js/jquery.min.js"></script>
    <script src="~/Templates/login-form-19/js/popper.js"></script>
    <script src="~/Templates/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/Templates/login-form-19/js/main.js"></script>

</body>
</html>

